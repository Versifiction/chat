@import "~/styles/vars"

.app-messages
  border-top: 1px solid white
  height: calc(100vh - 10rem)
  overflow-y: auto

.app-message
  padding: 1.5rem 1rem
  color: #CECECE

  &-user
    font-size: 1.4rem
    font-family: sans-serif
    font-weight: bold
    display: inline-block
    margin-right: 0.5rem

  &-time
    font-size: 0.8rem
    display: inline-block
    font-family: sans-serif

  &-content
    font-size: 1.2rem
    font-family: sans-serif
    margin-top: 0.5rem 
    margin-bottom: 0.5rem 
  
  &--own
    color: white !important

hr
  display: block
  width: 100%
  color: white
  opacity: 0.1
  height: 0.1rem
